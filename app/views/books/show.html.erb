<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container-fluid">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/list', book: @books, user: @book.user %>
		</div>
		<div class="col-lg-9">
			<table class="table">
				<caption>Book detail</caption>
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th><%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag @book.user, :profile_image, size:"100x100", fallback:"bird-free.jpg" %>
							<br><%= @user.name %>
							<% end %>
						</th>
						<td><%= link_to @book.title, book_path(@user) %></td>
						<td><%= @book.body %></td>
					</tr>
				</tbody>
			</table>
			<% if @book.user == current_user %>
				<%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
				<%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete %>
			<% end %>
		</div>
	</div>
</div>