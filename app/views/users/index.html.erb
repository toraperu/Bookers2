<div class="container-fluid">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/list', book:@book, user:@user%>
		</div>
		<div class="col-lg-9">
			<table class="table">
				<caption>Users</caption>
				<thead>
					<tr>
						<th>Image</th>
						<th>Name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<th><%= attachment_image_tag user, :profile_image, size:"30x30", fallback:"bird-free.jpg" %></th>
						<td><%= user.name %></td>
						<td><%= link_to "show", user_path(user) %></td>
					<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>