<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container-fluid">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/list', book:@book, user:@user%>
		</div>
		<div class="col-lg-9">
			<table class="table">
				<caption>Books</caption>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<th><%= attachment_image_tag book.user, :profile_image, size:"30x30" , fallback:"bird-free.jpg" %></th>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>